<ThingDefs>

  <ThingDef ParentName="ArmorMakeableBase" Class="FactionColors.ApparelUniformDef">
    <defName>Ork_Armor</defName>
    <thingClass>FactionColors.ApparelUniform</thingClass>
    <label>Orkish Armor</label>
    <description>Crude orkish armor.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Xenotech_Ork</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Orks/OrkArmorBase/OrkArmorIcon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>325000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <MarketValue>100</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
      <ArmorRating_Heat>0.05</ArmorRating_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Steel>135</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <worngraphicPath>Things/Orks/OrkArmorBase/OrkArmor</worngraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Ork</li>
      </tags>
      <defaultOutfitTags>
        <li>Ork</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1.00,1.00,1.00,1)</only>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="FactionColors.CompProperties_FactionColor">
        <compClass>FactionColors.CompFactionColor</compClass>
      </li>
    </comps>
  </ThingDef>

