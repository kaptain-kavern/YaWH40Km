    <defName>IoM_Apparel_LeathArmor</defName>
    <description>A heavy leather robe, reinforced with steel.</description>
    <label>armored robe</label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
