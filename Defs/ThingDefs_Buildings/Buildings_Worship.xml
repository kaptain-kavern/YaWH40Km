<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="BuildingBase">
    <thingClass>Corruption.BuildingAltar</thingClass>
    <tickerType>Normal</tickerType>
    <defName>AltarEmperor</defName>
    <label>Munitorum Altar</label>
    <description>A small altar dedicated to the worship of the one true Emperor of mankind.</description>
    <graphicData>
      <texPath>Things/Worship/Altar_Emperor</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.65</fillPercent>
    <inspectorTabs>
      <li>Corruption.ITab_Altar</li>
    </inspectorTabs>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <WorkToMake>16000</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>10</Beauty>
      <EntertainmentStrengthFactor>1</EntertainmentStrengthFactor>
    </statBases>
    <size>(3,1)</size>
		<hasInteractionCell>false</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
        <building>
            <watchBuildingStandDistanceRange>
                <min>1</min>
                <max>5</max>
            </watchBuildingStandDistanceRange>
            <watchBuildingStandRectWidth>5</watchBuildingStandRectWidth>
        </building>
        <placeWorkers>
            <li>PlaceWorker_WatchArea</li>
	       <li>PlaceWorker_NeverAdjacentUnstandable</li>
        </placeWorkers>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <costStuffCount>80</costStuffCount>
    <costList>
      <Cloth>80</Cloth>
      <EcclesiarchyIcon>1</EcclesiarchyIcon>
    </costList>
    <pathCost>70</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Worship</designationCategory>
  </ThingDef>

